<%= form_for(@snippet) do |f| %>
  <% if @snippet.errors.any? %>
    <div class="container">
      <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>
      <ul>
      <% @snippet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <%= f.text_field :title, class: 'input-text input-text-large', placeholder: 'Title (optional)' %>
  <%= text_area_tag :content, @content, class: 'textarea', placeholder: '00:00 YourName: Logged in...' %>
  </div>
  <div class="wrapper">
    <% if current_user.present? && current_user.organizations.present? %>
      <div class="form-org-question container">
        どの Organization の会話ですか??
      </div>
      <div class="form-org-radiobox container">
        <% current_user.organizations.each do |organization| %>
          <%= f.radio_button :organization_id, organization.id %><%= organization.login %>
        <% end %>
      </div>
    <% end %>
    <div class="container">
      <% if current_user.present? %>
        <%= button_tag 'Public post!', name: 'commit', value: 'public', type: 'submit', class: 'btn btn-green' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= button_tag 'Secret post!', name: 'commit', value: 'secret', type: 'submit', class: 'btn btn-yellow' %>
      <% end %>
    </div>
  </div>
<% end %>
