<% if current_user %>
  <div class="wrapper">
    <div class="container">
      <%= link_to new_snippet_path, class: 'btn btn-green btn-horizontal' do %>
        + Add New Snipet!
      <% end %>
    </div>
  </div>
<% end %>

<% @snippets.each do |snippet| %>
  <article class="snippet wrapper">
    <hgroup class="container">
      <h2 class="title"><%= link_to snippet do %><%= snippet.title %><% end %></h2>
    </hgroup>
    <p class="user_icon"><%= link_to image_tag(snippet.user.gravatar_url(size: 48), alt: snippet.user.username), user_path(snippet.user) %></p>
    <div class="content">
      <%= render 'snippets/snippet' , snippet: snippet %>
    </div>
  </article>
<% end %>
