<% if current_user %>
  <%= image_tag current_user.gravatar_url %>&nbsp;<%= current_user.username %>
  <%= link_to "Sign out", signout_path, class: 'btn btn-red' %>
<% else %>
  <%= link_to "Sign in with GitHub", "/auth/github", 'data-no-turbolink' => true, class: 'btn btn-blue' %>
<% end %>

<h1>Listing snippets</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Published</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @snippets.each do |snippet| %>
  <tr>
    <td><%= snippet.title %></td>
    <td><%= snippet.content %></td>
    <td><%= snippet.published %></td>
    <td><%= link_to 'Show', snippet %></td>
    <td><%= link_to 'Edit', edit_snippet_path(snippet) %></td>
    <td><%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Snippet', new_snippet_path, class: 'btn btn-blue' %>
